<!-- res/drawable/item_border.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/transparent" /> <!-- Color de fondo transparente -->
    <stroke
        android:width="1dp"
        android:color="#6A6A6A" /> <!-- Color del borde -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp" /> <!-- Ajuste para el borde inferior -->
</shape>
